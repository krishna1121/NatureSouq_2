 <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:background">@drawable/ogone_background</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="SimpleText" parent="WrapContent">
        <item name="android:textColor">#2065B0</item>
    </style>

    <style name="MainText" parent="SimpleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText_indented" parent="MainText">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MainTextBlack" parent="MainText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainText20bold" parent="MainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="MainText20boldBlack" parent="MainText20bold">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ImageListStyle">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="layoutListStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!--
    <style name="layoutListStyleNarrow" parent="layoutListStyle">
        <item name="android:layout_height">40dp</item>
    </style>
    -->

    <style name="item_one">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginLeft">1sp</item>
        <item name="android:layout_marginRight">1sp</item>
        <item name="android:layout_marginTop">1sp</item>
        <item name="android:background">@color/one</item>
    </style>

    <style name="item_two" parent="item_one">
        <item name="android:background">@color/two</item>
    </style>

    <style name="layoutList_style_narrow_one" parent="item_one">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="layoutList_style_narrow_two" parent="item_two">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="item_one_rounded_top" parent="item_one">
        <item name="android:background">@drawable/rectangle_rounded_top</item>
    </style>

    <style name="item_two_rounded_bottom" parent="item_two">
        <item name="android:background">@drawable/rectangle_rounded_bottom</item>
        <item name="android:layout_marginBottom">1sp</item>
    </style>

    <style name="edittext_indented">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


</resources>