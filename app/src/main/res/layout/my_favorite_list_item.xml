<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/describ"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:clickable="true"
            android:background="@drawable/textview_effect">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/productImage"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="13sp"
                        android:textColor="#515252"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/discription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short Description"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/nameLayout"
                    android:layout_toRightOf="@+id/productImage"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discription"
                    android:layout_toRightOf="@+id/productImage"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#1da664"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_lbl"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/describ">
            <RelativeLayout
                android:id="@+id/fevorite_imgLBL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:background="@drawable/textview_effect">
                <ImageView
                    android:id="@+id/fevorite_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_product"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/listmenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:background="@drawable/textview_effect">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_menu"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/removeItem"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:clickable="true"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/removeFev"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_effect_green"
            android:gravity="center">
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="REMOVE"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_below="@+id/deleteIcon"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />
</FrameLayout>
