<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="15dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circleView"
            android:src="@drawable/success_icon"
            />

        <TextView
            android:id="@+id/message_str1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_str1"
            android:textSize="11sp"
            android:textColor="#3c3c3c"
            android:gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/message_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_str2"
            android:textSize="12sp"
            android:textColor="#aeaeae"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1da865"
        android:weightSum="1"
        android:layout_below="@+id/lbl1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".33"
            android:padding="10dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Delivery By"
               android:textColor="#fff"
               android:gravity="center"
               android:textSize="12sp"/>
            <TextView
                android:id="@+id/delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri, March 18th"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="11sp"
                android:singleLine="true"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".33"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/item_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".33"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/grandtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1299"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lbl3"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment By"
            android:textColor="#3c3e3d"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/cod_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/payment_method"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#aeaeae"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/cod_img"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lbl4"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textColor="#3c3e3d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#aeaeae"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/address_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/address"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#aeaeae"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/address_img"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lbl2"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updated Send To"
            android:textColor="#3c3e3d"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/contact_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phone"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/user_contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#aeaeae"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/contact_img"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/email_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#aeaeae"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/email_img"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lbl5"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#1da865"
            android:paddingLeft="12dp">
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textColor="#fff"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <!--<TextView-->
                <!--android:id="@+id/order_no"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="123456789"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="12sp"-->
                <!--android:layout_toRightOf="@+id/title1"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_centerInParent="true"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/describ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/textview_effect">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/orderImage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/order_placeholder"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/orderImage"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#515252"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:id="@+id/orderDateLBL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/historyTime"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/clock"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/orderDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#b2b2b2"
                            android:text=""
                            android:textSize="11sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/historyTime"
                            android:layout_centerInParent="true"
                            android:singleLine="true"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/discription_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/nameLayout"
                    android:layout_toRightOf="@+id/orderImage"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/orderemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#b2b2b2"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/num_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/item_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item :"
                            android:textSize="13sp"
                            android:textColor="#515252"
                            android:singleLine="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/number_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="#b2b2b2"
                            android:singleLine="true"
                            android:layout_marginLeft="5dp"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/item_lbl"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discription_lbl"
                    android:layout_toRightOf="@+id/orderImage"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".6">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="#1da664"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight=".4">
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status :"
                            android:textSize="13sp"
                            android:textColor="#515252"
                            android:singleLine="true"/>
                        <TextView
                            android:id="@+id/orderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="#b2b2b2"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lbl6">
        <Button
            android:id="@+id/continuebtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="CONTINUE SHOPPING"
            android:textSize="11sp"
            android:textColor="#fff"
            android:clickable="true"
            android:background="@drawable/button_effect_green"
            android:textStyle="bold"
            android:onClick="onContinueShopping"/>
    </LinearLayout>
</RelativeLayout>
</ScrollView>
    </LinearLayout>