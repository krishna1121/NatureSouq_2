<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subTotal"
        android:layout_marginBottom="3.75dp"/>

    <RelativeLayout
        android:id="@+id/subTotal"
        android:layout_width="match_parent"
        android:layout_height="28.5dp"
        android:layout_above="@+id/shiping"
        android:background="#fff"
        android:layout_marginBottom="0.5dp">
        <TextView
            android:id="@+id/subtotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subotal"
            android:textSize="8.25sp"
            android:textColor="#b2b2b2"
            android:layout_marginLeft="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/subtotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8.25sp"
            android:textColor="#515252"
            android:layout_marginRight="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shiping"
        android:layout_width="match_parent"
        android:layout_height="28.5dp"
        android:layout_above="@+id/total"
        android:background="#fff"
        android:layout_marginBottom="0.5dp">
        <TextView
            android:id="@+id/shippingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:textSize="8.25sp"
            android:textColor="#b2b2b2"
            android:layout_marginLeft="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/shippingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8.25sp"
            android:textColor="#515252"
            android:layout_marginRight="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="28.5dp"
        android:layout_above="@+id/bottom"
        android:background="#fff"
        android:layout_marginBottom="9.75dp">
        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="8.25sp"
            android:textColor="#b2b2b2"
            android:layout_marginLeft="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8.25sp"
            android:textColor="#515252"
            android:layout_marginRight="9.75dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#00000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9.75dp">
        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="match_parent"
            android:layout_height="28.5dp"
            android:text="PROCEED TO CHECKOUT"
            android:textColor="#fff"
            android:layout_marginRight="9.75dp"
            android:layout_marginLeft="9.75dp"
            android:textSize="8.25sp"
            android:textStyle="bold"
            android:clickable="true"
            android:background="@drawable/button_effect_green"
            android:onClick="onCheckout" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_shape"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress" />


    <ImageView
        android:id="@+id/cartplaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:visibility="invisible"
        android:src="@drawable/cartplaceholder"
        />

</RelativeLayout>