<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:id="@+id/layout_main">

    <RelativeLayout
        android:id="@+id/describ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:clickable="true"
        android:background="@drawable/textview_effect">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/orderImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/order_placeholder"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id="@+id/nameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/orderImage"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order id"
                    android:textSize="13sp"
                    android:textColor="#515252"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:id="@+id/orderDateLBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/historyTime"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/clock"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/orderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b2b2b2"
                        android:text="Order date"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/historyTime"
                        android:layout_centerInParent="true"
                        android:singleLine="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/discription_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/nameLayout"
                android:layout_toRightOf="@+id/orderImage"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/discription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer email"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:id="@+id/num_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/item_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item :"
                        android:textSize="13sp"
                        android:textColor="#515252"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/number_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#b2b2b2"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/item_lbl"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discription_lbl"
                android:layout_toRightOf="@+id/orderImage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#1da664"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status :"
                        android:textSize="13sp"
                        android:textColor="#515252"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/orderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#b2b2b2"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/listmenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:visibility="invisible"
                    android:background="@drawable/textview_effect">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/list_menu"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/cancelOrder"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_effect_green"
            android:gravity="center">
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="CANCEL"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_below="@+id/deleteIcon"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />
</FrameLayout>

