<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <TextView
        android:id="@+id/shippingtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHIPPING ADDRESS"
        android:textSize="16.5sp"
        android:textColor="#585959"
        android:textStyle="bold"
        android:padding="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peter Sewwel"
            android:textColor="#000"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+54 354-34-33"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noida"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/address12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India, UP"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:singleLine="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textSize="13.5sp"
                android:textColor="#1da664"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:background="#00000000"/>

            <TextView
                android:id="@+id/delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textSize="13.5sp"
                android:textColor="#d52626"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:background="#00000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="0.75dp">

        <TextView
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peter Sewwel"
            android:textColor="#000"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+54 354-34-33"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noida"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/address22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India, UP"
            android:textColor="#b2b2b2"
            android:textSize="13.5sp"
            android:layout_marginLeft="18dp"
            android:singleLine="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp">

            <TextView
                android:id="@+id/edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textSize="13.5sp"
                android:textColor="#1da664"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:background="#00000000"/>

            <TextView
                android:id="@+id/delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textSize="13.5sp"
                android:textColor="#d52626"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:background="#00000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="310dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">
        <Button
            android:id="@+id/addbtn"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="ADD NEW"
            android:textColor="#fff"
            android:textSize="16.5sp"
            android:textStyle="bold"
            android:clickable="true"
            android:background="@drawable/button_effect_green"
            android:onClick="addNewAddress"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
    </LinearLayout>